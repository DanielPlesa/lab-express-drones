<h2>Available drones</h2>

{{#each drones}}
<div>
    <p>
        Name: {{name}} <br />
        Propellers: {{propellers}}<br />
        MaxSpeed:{{maxSpeed}}<br />

    </p>
    <a href="/drones/{{_id}}/edit">Edit </a>
    
    <form action="/drones/{{_id}}/delete" method="POST">
        <button>Delete</button>
    </form>
</div>
{{/each}}